<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:forms="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
		xmlns="sap.m">

	<forms:SimpleForm layout="ColumnLayout" busy="{ReportInfoModel>/busy}"
		busyIndicatorDelay="0" width="100%">

		<core:Title text="Phone Numbers"/>

		<Label text="Home"/>
		<Text text="{ReportInfoModel>/Users/0/User/homePhone}"/>

		<Label text="Office phone"/>
		<Text text="{ReportInfoModel>/Users/0/User/businessPhone}"/>

	</forms:SimpleForm>

</mvc:View>